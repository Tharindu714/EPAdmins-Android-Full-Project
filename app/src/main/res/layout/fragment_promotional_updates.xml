<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">

        <!-- Header for Trailers -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/trailerHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/side_nav_bar"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/trailerHeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:fontFamily="@font/inter_24pt_bold"
                android:gravity="start"
                android:paddingStart="8dp"
                android:text="New Trailers ðŸŽ¬"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" /> <!-- Semi-transparent black background -->
        </FrameLayout>

        <!-- Upload Trailer Section -->
        <EditText
            android:id="@+id/videoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Enter Video URL" />

        <WebView
            android:id="@+id/videoPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <EditText
            android:id="@+id/trailerHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Video Trailer Headline" />

        <EditText
            android:id="@+id/releaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Release Date" />

        <EditText
            android:id="@+id/trailerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/inter_18pt_regular"
            android:gravity="start|top"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/uploadTrailerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#512DA8"
            android:fontFamily="@font/inter_18pt_medium"
            android:text="Upload Trailer ðŸŽ¬"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Header for Posters -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/posterHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/side_nav_bar"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/posterHeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:fontFamily="@font/inter_24pt_bold"
                android:gravity="start"
                android:paddingStart="8dp"
                android:text="New Posters"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" /> <!-- Semi-transparent black background -->
        </FrameLayout>

        <!-- Upload Poster Section -->
        <EditText
            android:id="@+id/imageUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Enter Image URL" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/posterHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="What is this poster about?" />

        <EditText
            android:id="@+id/posterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:inputType="textMultiLine"
            android:hint="Description (Optional)" />

        <Button
            android:id="@+id/uploadPosterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#512DA8"
            android:fontFamily="@font/inter_18pt_medium"
            android:text="Upload Poster"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Header for Teasers -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/BlooperHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/side_nav_bar" />

            <TextView
                android:id="@+id/BlooperHeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:fontFamily="@font/inter_24pt_bold"
                android:gravity="start"
                android:paddingStart="8dp"
                android:text="Famous Bloopers ðŸ¤£"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" /> <!-- Semi-transparent black background -->
        </FrameLayout>

        <!-- Upload blooper Section -->
        <EditText
            android:id="@+id/blooper_videoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Enter Video URL" />

        <WebView
            android:id="@+id/blooper_videoPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <EditText
            android:id="@+id/blooper_Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Video Blooper Headline" />


        <Button
            android:id="@+id/uploadblooper_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#512DA8"
            android:fontFamily="@font/inter_18pt_medium"
            android:text="Upload Blooper ðŸ¤£"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/teasers_HeaderImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/side_nav_bar" />

            <TextView
                android:id="@+id/teasers_HeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:fontFamily="@font/inter_24pt_bold"
                android:gravity="start"
                android:paddingStart="8dp"
                android:text="Famous Teasers ðŸ“¢"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" /> <!-- Semi-transparent black background -->
        </FrameLayout>

        <!-- Upload Teasers Section -->
        <EditText
            android:id="@+id/teasers_videoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Enter Video URL" />

        <WebView
            android:id="@+id/teasers_videoPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <EditText
            android:id="@+id/teasers_Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_regular"
            android:hint="Teasers Headline" />


        <Button
            android:id="@+id/uploadteasers_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#512DA8"
            android:fontFamily="@font/inter_18pt_medium"
            android:text="Upload Teaser ðŸ“¢"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>


