<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Container for the large image and the thumbnail -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Large Image -->
        <ImageView
            android:id="@+id/largeCover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/Update_games"
            android:scaleType="centerCrop" />

        <!-- Thumbnail Image (Small Image to the left) -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/largeCover"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/genre_default"
            android:elevation="4dp"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <!-- Text details section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center_horizontal">

        <!-- Game Name -->
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Game Name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Release Date -->
        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Release Date"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Developer Name -->
        <TextView
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Developer Name"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

